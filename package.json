{
  "name": "pretty-greeter",
  "version": "1.0.2",
  "description": "A simple Pretty greeter",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"lib/**/*.js\" \"lib/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push origin master --tags"
  },
  "keywords": [
    "Hello",
    "Greeter"
  ],
  "author": "Laas",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:CoderAware/pretty-greeter.git"
  },
  "bugs": {
    "email": "safeetyy@gmail.com",
    "url": "https://github.com/CoderAware/pretty-greeter/issues"
  },
  "homepage": "git@github.com:CoderAware/pretty-greeter.git",
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  },
  "files": [
    "lib/**/*"
  ]
}
